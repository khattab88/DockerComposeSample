@model DockerComposeSample.Models.Book

<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Name">Book Name</label>
                <input asp-for="Name" type="text" class="form-control" placeholder="Book Name" />
            </div>

            <div class="form-group">
                <span asp-validation-summary="all" class="text-danger"></span>
            </div>

            <div>
                <button type="submit" class="btn btn-success">Create Book</button>
                <a asp-action="Index" class=" btn">Cancel</a>
            </div>
        </div>
    </div>
</form>